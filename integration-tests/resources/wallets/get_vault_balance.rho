new
  rl(`rho:registry:lookup`), SystemVaultCh,
  vaultCh, balanceCh,
  stdout(`rho:io:stdout`), log
in {

  rl!(`rho:vault:system`, *SystemVaultCh) |
  for (@(_, SystemVault) <- SystemVaultCh) {


    // REPLACE THE VAULT ADDRESS HERE vvv
    match "%VAULT_ADDR" {
      vaultAddress => {

        log!(("Accessing vault at VaultAddress", vaultAddress)) |

        // most SystemVault methods return an `Either[String, A] = (false, String) \/ (true, A)`
        @SystemVault!("findOrCreate", vaultAddress, *vaultCh) |
        for (@(true, vault) <- vaultCh) {

          log!("Obtained vault, checking balance") |

          @vault!("balance", *balanceCh) |
          for (@balance <- balanceCh) {

            log!("%LOG_MARKER Vault %REV_ADDR balance is ${balance}" %%{"balance":balance})
          }
        }
      }
    }

  } |

  contract log(@data) = {
    @"DEMO"!(data) | stdout!(data)
  }
}
